# Print purple
print_purple() {
    printf "\033[35m""$1""\033[00m\n"
}

# Prints and runs a command
run_verbose() {
    print_purple "*> Running \"$*\"..."
    eval $@
    echo
}

# Asks whether to reboot or do nothing
ask_reboot() {
    printf "\033[35m*> Restart OS [r]? \033[00m"
    read action

    case "$action" in
        "R" | "r") run_verbose reboot ;;
        *) return 0 ;;
    esac
}
